<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4.8"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimer"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|top"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDitloid"
        android:textSize="40sp"
        android:height="10dp"
        android:layout_gravity="center"
        style="@style/AppTheme"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:layout_weight="3"
        android:singleLine="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCategory"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_weight=".5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".3">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etSolution"
            android:capitalize="none"
            android:fontFeatureSettings="@string/abc_capital_off"
            android:layout_marginTop="5dp"
            android:inputType="none"
            android:layout_weight="2.37" />

        <Button
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/strCheckSolution"
            android:id="@+id/btnCheck"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="0dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#8a2b01"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>